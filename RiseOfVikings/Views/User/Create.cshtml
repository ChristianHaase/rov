<div class="jumbotron">
    <h1><span class="headline">Opret bruger</span></h1>
</div>
<div class="jumbotron">
    <form action="@Url.Action("Create", "User")" method="POST">
        <div class="container col-md-12">
            @if (Session["CreateError"] != null)
            {
                <div class="container login-error-box">
                    <p class="error-message">@Session["CreateError"]</p>
                </div>
            }
            <p class="text">*Fornavn: <br /><input type="text" name="firstname" class="create-user-textfields" /> <br /></p>
            <p class="text">*Efternavn: <br /><input type="text" name="lastname" class="create-user-textfields" /> <br /></p>
            <p class="text">Battletag: <br /><input type="text" name="battletag" class="create-user-textfields" /> <br /></p>
            <p class="text">*Brugernavn: <br /><input type="text" name="username" class="create-user-textfields" /> <br /></p>
            <p class="text">*Password: <br /><input type="password" name="password" class="create-user-textfields" /> <br /></p>
            <p class="text">*Email: <br /><input type="text" name="email" class="create-user-textfields" /></p>
        </div>
        <input class="btn btn-primary btn-lg user-btn" type="submit" value="Opret" />
    </form>
</div>
